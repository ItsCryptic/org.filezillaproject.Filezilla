{
    "id": "org.filezillaproject.Filezilla",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "filezilla",
    "rename-icon": "filezilla",
    "copy-icon": true,
    "rename-desktop-file": "filezilla.desktop",
    "finish-args": [
            "--share=ipc", "--socket=x11",
            "--device=dri",
            "--socket=wayland",
            "--talk-name=org.freedesktop.PowerManagement",
            "--talk-name=org.freedesktop.Notifications",
            "--talk-name=org.gnome.SessionManager",
            "--filesystem=host",
            "--share=network",
            "--filesystem=xdg-run/dconf",
            "--filesystem=~/.config/dconf:ro",
            "--talk-name=ca.desrt.dconf",
            "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
            "--require-version=0.10.3",
            "--socket=ssh-auth"
    ],
    "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/lib/*.a",
      "/lib/*.la",
      "/share/aclocal"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
    {
        "name": "wxWidgets",
        "cleanup": [
            "/bin",
            "/share/bakefile"
        ],
        "config-opts": [
            "--with-opengl",
            "--with-libjpeg",
            "--with-libtiff",
            "--with-libpng",
            "--with-zlib",
            "--disable-sdltest",
            "--enable-unicode",
            "--enable-display",
            "--enable-propgrid",
            "--disable-webkit",
            "--disable-webview",
            "--disable-webviewwebkit",
            "--with-expat=builtin",
            "--with-libiconv=/usr" ],
        "build-options" : {
            "cxxflags":"-std=c++0x"
        },
        "sources": [
            {
                "type": "archive",
                "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.0.4/wxWidgets-3.0.4.tar.bz2",
                "sha256":"96157f988d261b7368e5340afa1a0cad943768f35929c22841f62c25b17bf7f0" 
            }
        ]
    },
    {
        "name": "libfilezilla",
        "sources": [
            {
                "type": "archive",
                "url": "https://download.filezilla-project.org/libfilezilla/libfilezilla-0.19.1.tar.bz2",
                "sha512": "1342a199e4bdc211437deaa4ff34fe7f7de476a664b1ea4dc8df0482db98eb6c21e03f9c7b510bc00c81f6dacd7fdec2fa721554fe6e71c5bb2763618759b1a1"
            }
        ]
    },
    {
        "name": "filezilla",
        "config-opts": [
            "--with-pugixml=builtin"
        ],
        "cleanup": [
          "/share/pixmaps",
          "/share/man"
        ],
        "post-install": [
            "install -t /app/share/appdata -Dm644 org.filezillaproject.Filezilla.appdata.xml",
            "rm /app/share/appdata/filezilla.appdata.xml",
            "for size in 64 128 256 512; do
              rsvg-convert -w $size -h $size -f png -o $size.png /app/share/icons/hicolor/scalable/apps/filezilla.svg
              install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/filezilla.png
            done"
        ],
        "sources": [
            {
                "type": "archive",
                "url": "https://download.filezilla-project.org/client/FileZilla_3.46.0_src.tar.bz2",
                "sha512": "26ffb039b4a6d51d6d1011ee452f3690f74514c91a9e58c79880dbf778296cfc81283fade52f65f81654b828449e2b7e703b1d6c1e2e84c08f54681d2aa92674"
            },
            {
                "type": "file",
                "path": "org.filezillaproject.Filezilla.appdata.xml"
            }
        ]
    }
    ]
}
