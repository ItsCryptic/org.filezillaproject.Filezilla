{
    "id": "org.filezillaproject.Filezilla",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "filezilla",
    "rename-icon": "filezilla",
    "copy-icon": true,
    "rename-desktop-file": "filezilla.desktop",
    "finish-args": [
            "--share=ipc", "--socket=x11",
            "--device=dri",
            "--socket=wayland",
            "--talk-name=org.freedesktop.PowerManagement",
            "--talk-name=org.freedesktop.Notifications",
            "--talk-name=org.gnome.SessionManager",
            "--filesystem=host",
            "--share=network",
            "--filesystem=xdg-run/dconf",
            "--filesystem=~/.config/dconf:ro",
            "--talk-name=ca.desrt.dconf",
            "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
            "--require-version=0.10.3",
            "--socket=ssh-auth"
    ],
    "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/lib/*.a",
      "/lib/*.la",
      "/share/aclocal"
    ],
    "modules": [
        "shared-modules/glu/glu-9.0.0.json",
    {
        "name": "wxWidgets",
        "cleanup": [
            "/bin",
            "/share/bakefile"
        ],
        "config-opts": [
            "--with-opengl",
            "--with-libjpeg",
            "--with-libtiff",
            "--with-libpng",
            "--with-zlib",
            "--disable-sdltest",
            "--enable-unicode",
            "--enable-display",
            "--enable-propgrid",
            "--disable-webkit",
            "--disable-webview",
            "--disable-webviewwebkit",
            "--with-expat=builtin",
            "--with-libiconv=/usr" ],
        "build-options" : {
            "cxxflags":"-std=c++0x"
        },
        "sources": [
            {
                "type": "archive",
                "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.0.4/wxWidgets-3.0.4.tar.bz2",
                "sha256":"96157f988d261b7368e5340afa1a0cad943768f35929c22841f62c25b17bf7f0" 
            }
        ]
    },
    {
        "name": "libfilezilla",
        "sources": [
            {
                "type": "archive",
                "url": "https://download.filezilla-project.org/libfilezilla/libfilezilla-0.18.0.tar.bz2",
                "sha512": "745039ca0123516bc58a7057117386fdaed8956b7612b331ffd10f3c7b6c739c47c9c90261ccaf5f7862662775f6b0b467891731ae30c5976d36a0cfb0102455"
            }
        ]
    },
    {
        "name": "filezilla",
        "config-opts": [
            "--with-pugixml=builtin"
        ],
        "cleanup": [
          "/share/pixmaps",
          "/share/man"
        ],
        "post-install": [
            "install -t /app/share/appdata -Dm644 org.filezillaproject.Filezilla.appdata.xml",
            "rm /app/share/appdata/filezilla.appdata.xml",
            "for size in 64 128 256 512; do
              rsvg-convert -w $size -h $size -f png -o $size.png /app/share/icons/hicolor/scalable/apps/filezilla.svg
              install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/filezilla.png
            done"
        ],
        "sources": [
            {
                "type": "archive",
                "url": "https://download.filezilla-project.org/client/FileZilla_3.44.2_src.tar.bz2",
                "sha512": "9d4678a3a06f0ecac5ecfbae33f83df5f07e26da4f4a7e922fe5b00a5e59d5728af028667f6fa56210a23ecaa1c2a661d1874b218c2511a783644ed2b03e36ad"
            },
            {
                "type": "file",
                "path": "org.filezillaproject.Filezilla.appdata.xml"
            }
        ]
    }
    ]
}
