{
    "id": "org.filezillaproject.Filezilla",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "filezilla",
    "rename-icon": "filezilla",
    "copy-icon": true,
    "rename-desktop-file": "filezilla.desktop",
    "finish-args": [
            "--share=ipc", "--socket=x11",
            "--device=dri",
            "--socket=wayland",
            "--talk-name=org.freedesktop.PowerManagement",
            "--talk-name=org.freedesktop.Notifications",
            "--talk-name=org.gnome.SessionManager",
            "--filesystem=host",
            "--share=network",
            "--require-version=0.10.3",
            "--socket=ssh-auth"
    ],
    "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/lib/*.a",
      "/lib/*.la",
      "/share/aclocal"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
    {
        "name": "wxWidgets",
        "cleanup": [
            "/bin",
            "/share/bakefile"
        ],
        "config-opts": [
            "--with-opengl",
            "--with-libjpeg",
            "--with-libtiff",
            "--with-libpng",
            "--with-zlib",
            "--disable-sdltest",
            "--enable-unicode",
            "--enable-display",
            "--enable-propgrid",
            "--disable-webkit",
            "--disable-webview",
            "--disable-webviewwebkit",
            "--with-expat=builtin",
            "--with-libiconv=/usr" ],
        "build-options" : {
            "cxxflags":"-std=c++0x"
        },
        "sources": [
            {
                "type": "archive",
                "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.0.4/wxWidgets-3.0.4.tar.bz2",
                "sha256":"96157f988d261b7368e5340afa1a0cad943768f35929c22841f62c25b17bf7f0" 
            }
        ]
    },
    {
        "name": "libfilezilla",
        "sources": [
            {
                "type": "archive",
                "url": "https://download.filezilla-project.org/libfilezilla/libfilezilla-0.20.1.tar.bz2",
                "sha512": "5fa43b2215c71d1e0ba92fdfed8963f771b7b8862333f14e812b0e01a783ceb5e186706f6729be8112872cf4abfa4fc4b785bbab5596d1b3f474046febedbfe7"
            }
        ]
    },
    {
        "name": "filezilla",
        "config-opts": [
            "--with-pugixml=builtin"
        ],
        "cleanup": [
          "/share/pixmaps",
          "/share/man"
        ],
        "post-install": [
            "install -t /app/share/appdata -Dm644 org.filezillaproject.Filezilla.appdata.xml",
            "rm /app/share/appdata/filezilla.appdata.xml",
            "for size in 64 128 256 512; do
              rsvg-convert -w $size -h $size -f png -o $size.png /app/share/icons/hicolor/scalable/apps/filezilla.svg
              install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/filezilla.png
            done"
        ],
        "sources": [
            {
                "type": "archive",
                "url": "https://download.filezilla-project.org/client/FileZilla_3.47.1_src.tar.bz2",
                "sha512": "32573e847bc23acb86bdea8eb4de102e4f673465e0b86738d954b47eacdf6e534854a9065bddf8b586eba315bf65b1bfc4f17f9379819a6c9bd43ae6ed8f388a"
            },
            {
                "type": "file",
                "path": "org.filezillaproject.Filezilla.appdata.xml"
            }
        ]
    }
    ]
}
